rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Secure all collections by default: only authenticated users can access.
    match /{path=**} {
      allow read, write: if request.auth != null;
    }

    // Public read access for jobs, but only authenticated can write.
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow anyone to submit applications and quote requests (write-only).
    // Only authenticated users (admins) can read them.
    match /applications/{applicationId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    match /quote_requests/{quoteId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
  }
}
